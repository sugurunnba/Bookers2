  <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this obj from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  <div class="row">

    <div class="col-lg-4">
      <%= render 'layouts/list', book: @book, user: current_user %>
    </div>

    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table table-striped">
      <thead>
        <tr>
          <td></td>
