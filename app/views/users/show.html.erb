<%= flash[:notice] %>

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'layouts/list', book: Book.new, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
      <thead>
        <tr>
          <td></td>
          <td>Title</td>
          <td>Opinion</td>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
            <% end %>
          <td>
            <%= link_to book_path(book) do %>
              <%= book.title %></td>
            <% end %>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>

  </div>
</div>
<br>
