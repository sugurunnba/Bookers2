<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/fb63ee4e0c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to user_path(current_user.id) do %>
                            <i class="nav-link fas fa-home">Home</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to users_path do %>
                            <i class="nav-link fas fa-users">Users</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to books_path do %>
                            <i class="nav-link fas fa-book-open">Books</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to destroy_user_session_path, method: :delete do %>
                            <i class="nav-link fas fa-sign-out-alt">logout</i>
                        <% end %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to root_path do %>
                            <i class="nav-link fas fa-home">Home</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to homes_about_path do %>
                            <i class="nav-link fas fa-link">About</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to new_user_registration_path do %>
                            <i class="nav-link fas fa-user-plus">sign up</i>
                        <% end %>
                    </li>
                    <li class="nav-item">
                        <%= link_to new_user_session_path do %>
                            <i class="nav-link fas fa-sign-in-alt">login</i>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>

    <%= yield %>
  </body>
</html>
